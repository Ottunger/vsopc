class List {
   ++head : int32 <- 2;
   +isNil() : bool { true }
   +length() : int32 { 0 }
   +head() : int32 { head }
}

(* Nil is nothing more than a glorified alias to List *)
class Nil extends List { }

class Cons extends List {
   -tail : List;
   +init(hd : int32, tl : List) : Cons {
      head <- hd;
      tail <- tl;
      self
   }
   +isNil() : bool { false }
   +length() : int32 { 1 + tail.length() }
   +next() : List { tail }
}

